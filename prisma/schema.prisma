generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model user {
  user_id Int @id @default(autoincrement())
  created_at DateTime @default(now())
  username String
  name String
  birthdate DateTime
  email String
  password String
}

model customer {
  customer_id Int @id @default(autoincrement())
  created_at DateTime @default(now())
  user_id Int
  new_cust_ind String
}

model order {
  order_id Int @id @default(autoincrement())
  created_at DateTime @default(now())
  user_id Int
  new_cust_ind String
}

model payment_method {
  order_id Int @id @default(autoincrement())
  created_at DateTime @default(now())
  user_id Int
  new_cust_ind String
}